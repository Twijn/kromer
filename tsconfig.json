{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "declaration": true,  // Add this to generate .d.ts files
    "outDir": "./dist",
    "rootDir": "./src",   // Add this to specify source location
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}